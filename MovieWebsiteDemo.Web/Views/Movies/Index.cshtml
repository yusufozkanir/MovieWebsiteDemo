@model List<MovieWithDirectorDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>
<br />
<a class="btn btn-primary" asp-controller="Movies" asp-action="Save">Save Movies</a>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Director</td>
            <td>Producer</td>
            <td>ScreenWriter</td>
            <td>Movie Type</td>
            <td>Movie Duration</td>
            <td>Movie ReleaseDate</td>
            <td>Movie Summary</td>
            <td>Movie Rating</td>
            <td>Movie Trailer</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.MovieTitle</td>
                <td>@item.Director.DirectorName</td>
                <td>@item.Producer</td>
                <td>@item.ScreenWriter</td>
                <td>@item.MovieType</td>
                <td>@item.MovieDuration</td>
                <td>@item.MovieReleaseDate</td>
                <td>@item.MovieSummary</td>
                <td>@item.MovieRating</td>
                <td>@item.MovieTrailer</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Movies" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Movies" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>